
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. User Profile & Batch Progress
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    match /batch_progress/{progressId} {
      allow read, write: if request.auth != null && (resource.data.userId == request.auth.uid || progressId == request.auth.uid);
    }

    // 2. Questions and Courses
    match /questions/{questionId} {
      allow read: if request.auth != null;
      allow write: if false; 
    }
    
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // 3 & 4. Exam Attempts
    match /exam_attempts/{attemptId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // 5. Global Fallback
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
